datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String  @unique
  isAdmin   Boolean @default(false)
  // booking   Booking[]
}

model Contractor {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String  @unique
  isAdmin   Boolean @default(false)
}

model Admin {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String  @unique
  isAdmin   Boolean @default(true)
}

model Booking {
  id                   String  @id @default(auto()) @map("_id") @db.ObjectId
  // User     User?   @relation(fields: [userId], references: [id])
  // userId   String? @db.ObjectId
  from                 String?
  to                   String?
  departureDate        String?
  adultPassengerNumber String?
  childPassengerNumber String?
}

model Ticket {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  airlines           String?
  from               String?
  to                 String?
  takeOffTime        String?
  landingTime        String?
  flightDuration     String?
  totalPassengerSeat Int?
  fare               Int?
}

model Payment {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  paymentDetails String?
  amount         Int?
}
