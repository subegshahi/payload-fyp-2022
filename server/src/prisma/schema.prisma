datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String
  lastName     String
  username     String   @unique
  password     String
  isContractor Boolean  @default(false)
  isAdmin      Boolean  @default(false)
  isRegistered Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Ticket {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  airlinesName       String
  from               String
  to                 String
  date               DateTime
  takeoffTime        String?
  landingTime        String?
  totalPassengerSeat Int
  fare               Int
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Booking {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  airlinesName         String
  from                 String
  to                   String
  date                 DateTime
  takeoffTime          String?
  landingTime          String?
  seatNumber           String?
  adultPassengerNumber Int      @default(1)
  childPassengerNumber Int      @default(0)
  hasPaid              Boolean  @default(false)
  paidAmount           Int
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model Payment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
